<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ButtonStyle">
        <item name="background">@drawable/background_blur</item>
        <item name="android:fontFamily">@font/profile_text</item>
        <item name="android:textAppearance">@style/text_login</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginTop">35dp</item>
    </style>

    <style name="btn_red_style">
        <item name="background">@drawable/icon_red_backgroun</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/red</item>
        <item name="android:fontFamily">@font/profile_text</item>
        <item name="textAppearanceButton">@style/btn_text_style</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>


    </style>

    <style name="text_login">
        <item name="android:textSize">22sp</item>
        <item name="lineHeight">22sp</item>
        <item name="android:fontFamily">@font/profile_text</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.03</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="text_small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/oswald</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.01</item>
    </style>


    <style name="edit_text_style">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.12</item>
        <item name="android:textColor">#707070</item>
    </style>

    <style name="edit_text_on_black">
        <item name="fontFamily">@font/profile_text</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.1</item>
        <item name="android:textColor">#E5E5E5</item>
        <item name="android:layout_margin">@dimen/text_margin</item>
    </style>

    <style name="date_text_style">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.01</item>
        <item name="android:textColor">#B8B8B8</item>
    </style>

    <style name="btn_text_style">
        <item name="fontFamily">@font/profile_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.06</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="edit_style">
        <item name="textAppearanceBody1">@style/edit_text_style</item>
        <item name="android:gravity">center</item>


    </style>

    <style name="bottom_nav_text">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/oswald</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.08</item>

    </style>

    <style name="middle_text">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/profile_text</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.06</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="text_long">
        <item name="android:fontFamily">@font/lato_text</item>
        <item name="android:gravity">top</item>
        <item name="lineHeight">28dp</item>
        <item name="android:textColor">#E5E5E5</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="big_text_style">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/profile_text</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.01</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">true</item>

    </style>

    <style name="tab_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/profile_text</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.01</item>

    </style>

    <style name="table_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">9dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.01</item>

    </style>

    <style name="black_text">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/profile_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.01</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="on_red_text">
        <item name="background">@drawable/icon_red_backgroun</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bold_lato_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:gravity">center</item>
      <item name="android:letterSpacing" tools:targetApi="lollipop">0.06</item>
    </style>

    <style name="spinner_item"></style>

</resources>