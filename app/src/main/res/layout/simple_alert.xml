<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="296dp"
    android:layout_height="180dp"
    android:layout_gravity="center"
    android:backgroundTint="@color/white"
    android:background="@color/white"
    app:cardCornerRadius="16dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/alertTitle"
        style="@style/black_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Сообщение"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alertMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/lato_text"
        android:text="Ваша заявка на участие отправлена к Федерации, ждите ответа."
        android:textColor="@color/mask"
        android:textSize="16sp"
        android:lineHeight="20dp"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        app:layout_constraintBottom_toTopOf="@+id/onPositive"
        app:layout_constraintTop_toBottomOf="@+id/alertTitle"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/onPositive"
        style="@style/bold_lato_text"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/green"
        android:gravity="center"
        android:text="OK"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>